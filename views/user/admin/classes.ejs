<!DOCTYPE html>
<html lang="en">

<head>

<%include ../modules/head.ejs%>
</head>

<body>

    <% var usertype = typeof type!='undefined' ? type : 'admin'%>
    <% var query = typeof query!='undefined' ? query : ''%>
    <% var classes = typeof classes!='undefined' ? classes : []%>
    <% var classview = typeof classview!='undefined' ? classview : []%>

    <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>Classes</h1>
                        <ul class="home">
                            <li><a href="/auth/logout" id='logout'>Logout</a></li>
                        </ul>
                        
                    </div>
                </div>
            </div>
        </div>

    <div id="wrapper" class="toggled">

        
        <% include ../modules/sidebar.ejs %>
            
        <div id="page-content-wrapper">

        <%if(query == "all" || query == '') {%>

            <a href="/user/admin/classes?option=addclass">Add Admin</a>

            <ul type="none">
                <% for(var i=0; i<classes.length; i++) {%>
                <a href="/users/getclass?option=classview&id=<%= classes[i].class_id %>">
                   <li>
                        <svg class="circle" style="height:300px;">
                        <g>
                            <circle class="circle" cx="50%" cy="50%" r="130" stroke="#E80C50" stroke-width="10" fill="none"/></circle>
                            <text x="50%" y="50%" font-family="Verdana" font-size="35" fill="blue"><%= classes[i].name %></text>
                        </g>
                        </svg>
                    
                   </li>
                 </a>
                <% } %>
            </ul>

        <% } %>

        <% if(query == "classview") { %>
            <svg class="logo" >
                <circle cx="50%" cy="50%" r="70" stroke="#E80C50" stroke-width="10" fill="none" /></circle>
            </svg>
            <table>
                <tr>
                    <th> Name </th>
                    <td> <%= classview[0].name %> </td>
                </tr>
            </table>

        <% } %>

        <% if(query == "addclass") { %>
            <div id="student">
                <form id="newclass" method="post" action="#">
                Personal Info <br>
                Name <input type="text" name="name">
                Allergies <input type="text" name="allergies">
                Birthday <input type="date" name="bday">
                <input type="submit" value="Add Class">

                </form>
            </div>
        <% } %>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    

</body>

</html>