<!DOCTYPE html>
<html lang="en">

<head>

<%include ../modules/head.ejs%>
</head>

<body>

    <% var usertype = typeof type!='undefined' ? type : 'admin'%>
    <% var query = typeof query!='undefined' ? query : ''%>
    <% var teachers = typeof teachers!='undefined' ? teachers : []%>
    <% var teacher = typeof teacher!='undefined' ? teacher : []%>

    <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>Teachers</h1>
                        <a href="/auth/logout">Logout</a>
                        
                    </div>
                </div>
            </div>
        </div>

    <div id="wrapper" class="toggled">

        
        <% include ../modules/sidebar.ejs %>
            
        <div id="page-content-wrapper">
        <%if(query == "all" || query == '') {%>

            <a href="/user/admin/teachers?option=addteacher">Add Teacher</a>

            <ul type="none">
                <% for(var i=0; i<teachers.length; i++) {%>
                <a href="/users/geteacher?option=teacher&id=<%= teachers[i].user_id %>">
                   <li>
                        <svg class="circle" style="height:300px;">
                        <g>
                            <circle class="circle" cx="50%" cy="50%" r="130" stroke="#E80C50" stroke-width="10" fill="none"/></circle>
                            <text x="50%" y="50%" font-family="Verdana" font-size="35" fill="blue"><%= teachers[i].name %></text>
                        </g>
                        </svg>
                    
                   </li>
                 </a>
                <% } %>
            </ul>

        <% } %>

        <% if(query == "teacher") { %>
            
            <svg class="logo" >
                <circle cx="50%" cy="50%" r="70" stroke="#E80C50" stroke-width="10" fill="none" /></circle>
            </svg>
            <table>
                <tr>
                    <th> Name </th>
                    <td> <%= teacher[0].name %> </td>
                </tr>
                <tr>
                    <th> Age </th>
                    <td> <%= teacher[0].age %> </td>
                </tr>
                <tr>
                    <th> Allergies </th>
                    <td> <%= teacher[0].allergies %> </td>
                </tr>
            </table>

        <% } %>

        <% if(query == "addteacher") { %>
            <div id="student">
                <form id="newteacher" method="post" action="#">
                Personal Info <br>
                Name <input type="text" name="name">
                Allergies <input type="text" name="allergies">
                Birthday <input type="date" name="bday">
                <input type="submit" value="Add Teacher">

                </form>
            </div>
        <% } %>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    

</body>

</html>